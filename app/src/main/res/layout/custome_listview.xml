<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="141dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/view_listview_item_bg"
    android:visibility="visible">

    <ImageView
        android:id="@+id/forecastImage_imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:contentDescription="TODO"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/overlay_weather_status_forecast" />

    <TextView
        android:id="@+id/temp_forecast_textView"
        android:layout_width="wrap_content"
        android:layout_height="26dip"
        android:ellipsize="marquee"
        android:singleLine="true"

        android:textSize="33dip"
        android:layout_below="@+id/day_textView"
        android:layout_alignLeft="@+id/day_textView"
        android:layout_alignStart="@+id/day_textView"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif-medium"
        android:textColor="#333333" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/forecastImage_imageView"
        android:gravity="center_vertical"

        android:textSize="33dip"
        android:layout_marginLeft="10dp"
        android:id="@+id/day_textView"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-light"
        android:textColor="#333333" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:id="@+id/cond_forecast_textView"
        android:layout_toEndOf="@+id/temp_forecast_textView"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/temp_forecast_textView"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:textSize="18dip"
        android:fontFamily="sans-serif-thin"
        android:textColor="#484a4f" />

</RelativeLayout>